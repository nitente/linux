# Turn on/off powermanager
bindsym $mod+x exec $(xset s off && xset -dpms && killall xautolock & notify-send 'Lights will stay on.')
bindsym $mod+Shift+x exec $(xset s on && xset dpms && xautolock -time 15 -locker 'systemctl suspend' & notify-send 'Lights will turn off.')

# Hider mouse cursor
bindsym $mod+p exec unclutter -idle 1 -jitter 2 -root

# Sound
bindsym XF86AudioRaiseVolume exec amixer -q set Master 3%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 3%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# Brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

# Printscreen
bindsym Print exec scrot -e 'mv $f ~/pic/scr/'

# Status
bindsym $mod+z exec ~/sh/notification.sh

# Make a program run floating :: use xprop to find the class of a window
for_window [class="feh"] floating enable
for_window [class="KeePass"] floating enable
for_window [class="Blockify"] floating enable
for_window [title="Save Database"] floating enable
for_window [title="Create New Password Database"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="lxappearance"] floating enable
for_window [class="obs"] floating enable
for_window [window_role="pop-up"] floating enable

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show
bindsym $mod+plus [instance="live"] scratchpad show

